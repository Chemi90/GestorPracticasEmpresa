<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="575.0" prefWidth="749.0" stylesheets="@../../styles/fichaEmpresa.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gestorpracticasempresa.controllers.FichaEmpresaController">
   <top>
      <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0" styleClass="top-container" BorderPane.alignment="CENTER_RIGHT">
         <children>
            <Label styleClass="welcome-label" text="Bienvenido Profesor">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin></Label>
            <VBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="73.0" styleClass="top-right-container">
               <children>
                  <ImageView fx:id="icnPersona" fitHeight="45.0" fitWidth="49.0" pickOnBounds="true" preserveRatio="true" styleClass="profile-icon">
                     <VBox.margin>
                        <Insets right="20.0" />
                     </VBox.margin></ImageView>
                  <Button fx:id="btnSalir" mnemonicParsing="false" styleClass="button-logout" text="Salir">
                     <VBox.margin>
                        <Insets right="20.0" />
                     </VBox.margin></Button>
               </children>
            </VBox>
         </children>
      </HBox>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="343.0" prefWidth="680.0" styleClass="main-container">
         <children>
            <Label styleClass="section-header" text="Empresa">
               <VBox.margin>
                  <Insets bottom="50.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="CENTER" styleClass="info-container">
               <children>
                  <Label styleClass="info-label" text="Nombre de la empresa">
                     <HBox.margin>
                        <Insets left="-30.0" />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="lbNombreEmpresa" styleClass="info-value" text="Nombre de la empresa">
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                  </Label>
               </children>
               <padding>
                  <Insets left="20.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" styleClass="info-container">
               <children>
                  <Label styleClass="info-label" text="Teléfono">
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                     <HBox.margin>
                        <Insets left="-105.0" />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="lbTelefono" styleClass="info-value" text="Teléfono">
                     <HBox.margin>
                        <Insets left="120.0" />
                     </HBox.margin>
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="5" left="20" right="20" top="5" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" styleClass="info-container">
               <children>
                  <Label styleClass="info-label" text="Email">
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                     <HBox.margin>
                        <Insets left="-120.0" />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="lbEmail" styleClass="info-value" text="Email">
                     <HBox.margin>
                        <Insets left="140.0" />
                     </HBox.margin>
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="5" left="20" right="20" top="5" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" styleClass="info-container">
               <children>
                  <Label styleClass="info-label" text="Responsable de la empresa">
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </Label>
                  <Label fx:id="lbResponsable" styleClass="info-value" text="Responsable de la empresa">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="5" left="20" right="20" top="5" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" styleClass="info-container">
               <children>
                  <Label styleClass="info-label" text="Observaciones o incidencias">
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </Label>
                  <Label fx:id="lbObservaciones" styleClass="info-value" text="Observaciones o incidencias">
                     <padding>
                        <Insets left="20.0" />
                     </padding>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="5" left="20" right="20" top="5" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" styleClass="bottom-container" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnVolver" mnemonicParsing="false" styleClass="button-return" text="Volver">
               <HBox.margin>
                  <Insets left="100.0" right="100.0" />
               </HBox.margin></Button>
            <Button fx:id="btnEditar" mnemonicParsing="false" styleClass="button-edit" text="Editar empresa">
               <HBox.margin>
                  <Insets left="100.0" right="100.0" />
               </HBox.margin></Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
